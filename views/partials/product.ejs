<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
    <div class="card border-info mx-0 mb-3">

        <img src="<%= product.imageUrl %>" class="card-img-top">

        <div class="card-body text-dark">

            <h5 class="card-title">
                <%= product.title.toUpperCase() %>
                <span class="badge badge-pill badge-secondary font-weight-light"> $<%= product.price %></span>
            </h5>

            <p class="card-text"><%= product.description %></p>

            <a href="/products/<%= product.id %>" type="button" class="btn btn-outline-primary">Details</a>
            <%- include("../partials/add-to-cart-cta.ejs", {product: product}) %>

        </div>

    </div>
</div>
