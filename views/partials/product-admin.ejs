<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
    <div class="card border-info mx-0 mb-3">

        <img src="<%= product.imageUrl %>" class="card-img-top">

        <div class="card-body text-dark">

            <h5 class="card-title"><%= product.title.toUpperCase() %></h5>

            <p class="card-text"><%= product.description %></p>

            <a href="/admin/edit-product" type="button" class="btn btn-warning">Edit</a>
            <form action="/admin/delete-product" method="post" class="d-inline">
                <button type="button" class="btn btn-danger" type="submit">Delete</button>
            </form>

        </div>

    </div>
</div>
